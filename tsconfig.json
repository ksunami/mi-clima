{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs", // ðŸ‘ˆ Cambia a `commonjs` SOLO para Jest
    "moduleResolution": "node", // ðŸ‘ˆ Asegura que Jest resuelva mÃ³dulos correctamente
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "jest",
      "node"
    ], // ðŸ‘ˆ Asegura que Jest tenga los tipos correctos
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.js",
    "tests/**/*" // ðŸ‘ˆ Asegura que Jest pueda encontrar pruebas
  ],
  "exclude": [
    "node_modules"
  ]
}
